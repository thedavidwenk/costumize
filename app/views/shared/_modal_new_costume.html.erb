<div class="modal" id="testing" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Your Costume</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(costume) do |f|  %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :category, collection: Costume::CATEGORIES %>
          <%= f.input :size, collection: Costume::SIZES %>
          <%= f.input :price_per_day, as: :integer %>
          <%= f.input :thumbnail, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
