<div class="mt-5">
  <h1>Find your costume...</h1>
</div>

<form class="d-flex my-5" role="search">
  <input class="form-control me-2 rounded-4" type="search" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success rounded-4" type="submit">Search</button>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <!-- A place holder for us to see the cards. We'll add the actual ruby code as we work on the controller -->
  <% @costumes.each do |costume| %>
    <div class="col">
      <div class="card h-100 rounded-4">
        <div class="">
          <img src="<%= costume.photo_url %>" class="card-img-top" alt="...">
          <span class="position-absolute top-0 end-0 badge rounded-pill text-bg-secondary fw-medium bg-white text-dark m-3 p-3 fs-5"><%= costume.price_per_day %>â‚¬/Day</span>
        </div>
        <div class="card-body">
          <h5 class="card-title fw-bold"><%= costume.name %></h5>
          <p class="card-text"><%= costume.description %></p>
        </div>
        <div class="">
          <small class="text-body-secondary"><!-- In case we want something at the footer --></small>
        </div>
      </div>
    </div>
  <% end %>
  <!-- -->
</div>
